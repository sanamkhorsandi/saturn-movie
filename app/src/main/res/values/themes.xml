<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SaturnMovie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_1</item>
        <item name="colorPrimaryVariant">@color/orange_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_2</item>
        <item name="colorSecondaryVariant">@color/brown_1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="fontFamily">@font/vazir_regular</item>
        <item name="android:fontFamily">@font/vazir_regular</item>
        <item name="movieTitle">@color/black</item>
        <item name="placeholder">@color/gray_day</item>
        <item name="bw">@color/black</item>
    </style>

    <style name="Theme.SaturnMovie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FilimoSearch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FilimoSearch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>